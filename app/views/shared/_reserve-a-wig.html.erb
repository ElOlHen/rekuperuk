<main class="individual-wig-recap">
  <div id="prev-btn-container">
      <button class="dark-green-back-btn" id="prev-btn">
        <%= link_to wig_path(@wig) do %>
          <i class="fa-solid fa-arrow-left"></i>
        <% end %>
      </button>
  </div>

  <%= render "shared/order-recap-card" %>

  <div class="delivery-options">
    <div class="post-office">
      <%= link_to new_wig_acquisition_path(@wig, delivery: true), class: "post-office-img" do %>
        <%= image_tag "paper-plane.png", alt: "paper plane image" %>
      <% end %>
    </div>
    <div class="on-site">
      <%= link_to new_wig_acquisition_path(@wig, delivery: false), class: "delivery-on-site-img" do %>
        <%= image_tag "giving.png", alt: "hand to hand image" %>
      <% end %>
    </div>
  </div>
</main>
